\usepackage{fontspec}
\RequirePackage{xeCJK}

\xeCJKsetup{CJKecglue={\hskip 0.08em plus 0.07\baselineskip}}

\newcommand*\FontDir{fonts/}

\defaultfontfeatures[times]{Path=\FontDir,%
UprightFont=      times.ttf,%
ItalicFont=      timesi.ttf,%
BoldFont=        timesbd.ttf,%
BoldItalicFont=  timesbi.ttf,%
}

\setmainfont{times}

\setCJKmainfont[Path=\FontDir,AutoFakeBold,AutoFakeSlant]{kaiu.ttf}
\setCJKsansfont{Noto Serif CJK KR}

% 設置韓文字體
\newcommand*\krtext[1]{\textsf {#1}}

% 調整中文的基線，配合英文字型。
\renewcommand*\CJKsymbol[1]{\raise0.08ex\hbox{#1}}



\let\CJKpunctsymbol\CJKsymbol
